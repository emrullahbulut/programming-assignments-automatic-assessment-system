
@using (Html.BeginForm())
{
    <div>Öğretmen Kayıt Ekranı</div>
    <div>@ViewBag.Surname</div>

    <div class="form-horizontal" style="margin-top:15px;">
        <div class="form-group">
            <label for="LectureId" class="control-label col-md-3">Isminiz </label>

            <div class="">
                @Html.TextBox("Name", null, new { @class = "form-control" })
            </div>


        </div>
        <div class="form-group">
            <label for="LectureId" class="control-label col-md-3">Soyadınız </label>

            <div class="">
                @Html.TextBox("SurName", null, new { @class = "form-control" })
            </div>


        </div>
        <div class="form-group">
            <label for="LectureId" class="control-label col-md-3">Mail </label>

            <div class="">
                @Html.TextBox("Mail", null, new { @class = "form-control", type = "mail" })
            </div>


        </div>
        <div class="form-group">
            <label for="LectureId" class="control-label col-md-3">Parola </label>

            <div class="">
                @Html.TextBox("Password", null, new { @class = "form-control", type = "password" })
            </div>


        </div>


        <div class="form-group">
            <div class="">
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>


        </div>



    </div>

}